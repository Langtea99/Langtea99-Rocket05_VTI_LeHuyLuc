package lesson7;

import java.io.BufferedInputStream;
import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.net.MalformedURLException;
import java.net.URL;

public class DownloadFileDemo {

	public static void main(String[] args) {
	String imagePath = "https://images.genius.com/1ff3ae720dd5abab3ce0e9324881c174.500x500x1.jpg";
	InputStream is = null;
	BufferedInputStream in = null;
	String localImagePath = "Alone.jpg";
	OutputStream os = null;
	try {
		os = new FileOutputStream(new File(localImagePath));
		is = new URL(imagePath).openStream();
		in = new BufferedInputStream(is);
		byte[] b = new byte[1024];
		int numberOfByte = 0;
		while((numberOfByte=in.read(b)) != -1){
			os.write(b,0,numberOfByte);
		}
		
	} catch (MalformedURLException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	} catch (IOException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}finally{
		try {
			is.close();
			os.close();
			in.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	}
}
