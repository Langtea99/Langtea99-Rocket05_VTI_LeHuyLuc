import java.util.Scanner;

public class Person {
	private int age;

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}
	
	public int inputAge() throws Exception{
		try{
			Scanner scanner = new Scanner(System.in);
			System.out.print("Nhap vao tuoi : ");
			int age = scanner.nextInt();
			System.out.println("Tuoi la :"+ age);
			return age;			
		}catch(Exception e){
			throw new Exception("wrong inputing! Please input an age as int, input again.");
		}
		
	}
}
