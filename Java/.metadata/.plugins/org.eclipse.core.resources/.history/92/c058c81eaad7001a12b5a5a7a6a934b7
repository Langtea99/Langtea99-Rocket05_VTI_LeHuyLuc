package lesson7;

import java.io.BufferedInputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.net.MalformedURLException;
import java.net.URL;

public class DownloadFileDemo {

	public static void main(String[] args) {
		String imagePath = "https://i1.wp.com/tandatthanhca.com/wp-content/uploads/2017/09/Lang.jpg?fit=1024%2C768";
		InputStream is = null;
		OutputStream os = null;
		BufferedInputStream in = null;
			try {
				is = new URL(imagePath).openStream();
				os = new FileOutputStream(new File("Láº·ng"));
				in = new BufferedInputStream(is);
			} catch (MalformedURLException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
	}

}
